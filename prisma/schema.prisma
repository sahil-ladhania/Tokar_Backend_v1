generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  userId Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  phone String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Game Mode Enum
enum GameMode {
  COMPUTER
  RANDOM
  FRIENDS
}